{
	// We extend it from here!
	"extends": "tsconfig/nextjs.json",
	// You can specify your own include/exclude
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"],

	"compilerOptions": {
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["./components/*"],
			"@lib/*": ["./lib/*"],
			"@hooks/*": ["./hooks/*"],
			"@providers/*": ["./providers/*"]
		}
	}
}
